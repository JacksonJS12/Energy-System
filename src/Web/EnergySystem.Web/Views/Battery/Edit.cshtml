@model EnergySystem.Web.ViewModels.Battery.EditBatteryInputModel

@{
    ViewData["Title"] = "Edit Battery";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<form method="post" id="editForm">
    <!-- Battery Model -->
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control"/>
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <!-- Capacity -->
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <!-- Voltage -->
    <div class="form-group">
        <label asp-for="Voltage"></label>
        <input asp-for="Voltage" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="Voltage" class="text-danger"></span>
    </div>

    <!-- Manufacturer -->
    <div class="form-group">
        <label asp-for="Manufacturer"></label>
        <input asp-for="Manufacturer" class="form-control"/>
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>

    <!-- Manufacture Date -->
    <div class="form-group">
        <label asp-for="ManufactureDate"></label>
        <input asp-for="ManufactureDate" class="form-control" type="date"/>
        <span asp-validation-for="ManufactureDate" class="text-danger"></span>
    </div>

    <!-- Current Charge Level -->
    <div class="form-group">
        <label asp-for="CurrentChargeLevel"></label>
        <input asp-for="CurrentChargeLevel" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="CurrentChargeLevel" class="text-danger"></span>
    </div>

    <!-- State of Health -->
    <div class="form-group">
        <label asp-for="StateOfHealth"></label>
        <input asp-for="StateOfHealth" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="StateOfHealth" class="text-danger"></span>
    </div>

    <!-- Cycle Count -->
    <div class="form-group">
        <label asp-for="CycleCount"></label>
        <input asp-for="CycleCount" class="form-control" type="number"/>
        <span asp-validation-for="CycleCount" class="text-danger"></span>
    </div>

    <!-- Temperature -->
    <div class="form-group">
        <label asp-for="Temperature"></label>
        <input asp-for="Temperature" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="Temperature" class="text-danger"></span>
    </div>

    <!-- Lifetime Energy Stored -->
    <div class="form-group">
        <label asp-for="LifetimeEnergyStored"></label>
        <input asp-for="LifetimeEnergyStored" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="LifetimeEnergyStored" class="text-danger"></span>
    </div>

    <!-- Hidden Battery ID -->
    <input type="hidden" asp-for="Id"/>

    <!-- Hidden Property ID -->
    <input type="hidden" asp-for="PropertyId"/>

</form>
<!-- Submit Button -->
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editModal">
    Save Changes
</button>
<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Confirm Changes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Do you want to save these changes?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="editForm.submit()">Save Changes</button>
            </div>
        </div>
    </div>
</div>