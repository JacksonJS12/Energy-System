@model PropertiesListViewModel
@{
    ViewData["Title"] = "All Properties";
}
<div class="container text-center my-5">
    <h2 class="mb-4">YOUR PROPERTIES</h2>

    <!-- Property Cards -->
    <div class="row">
        @foreach (var property in Model.Properties)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm" onclick="location.href='@Url.Action("Details", "Property", new { id = property.Id })'" style="cursor: pointer;">
                    <div class="card-header bg-success text-white">
                        @property.Name.ToUpper()
                    </div>
                    <div class="card-body">
                        <p><strong>Address:</strong> @property.Address</p>
                        <p><strong>Electricity Need:</strong> @property.ElectricityNeed kWh</p>
                        <a class="btn btn-primary" asp-controller="Property" asp-action="Details" asp-route-id="@property.Id">View Details</a>
                    </div>
                </div>
            </div>
        }
        <!-- Add Property Button -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    ADD PROPERTY
                </div>
                <div class="card-body text-center">
                    <a class="btn btn-success" asp-controller="Property" asp-action="Create">Add New</a>
                </div>
            </div>
        </div>
    </div>
</div>
