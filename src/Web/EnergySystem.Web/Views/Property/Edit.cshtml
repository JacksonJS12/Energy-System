@model EnergySystem.Web.ViewModels.Property.EditPropertyInputModel

@{
    ViewData["Title"] = "Edit Property";
    var gridsItems = this.Model.GridsItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<h1>@ViewData["Title"]</h1>

<form method="post" id="editForm">
    <!-- Property Name -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Property Address -->
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <!-- Electricity Need -->
    <div class="form-group">
        <label asp-for="ElectricityNeed"></label>
        <input asp-for="ElectricityNeed" class="form-control" />
        <span asp-validation-for="ElectricityNeed" class="text-danger"></span>
    </div>

    <!-- Grid Selection -->
    <div class="form-group">
        <label asp-for="GridId"></label>
        <select asp-for="GridId" class="form-control" asp-items="gridsItems"></select>
        <span asp-validation-for="GridId" class="text-danger"></span>
    </div>

    <!-- Hidden ID Field -->
    <input type="hidden" asp-for="Id" />
</form>

<!-- Save Changes Button -->
<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#editModal">
    Save Changes
</button>

<!-- Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Confirm Changes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Do you want to save these changes?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="editForm.submit()">Save Changes</button>
            </div>
        </div>
    </div>
</div>
